extends layout

block body
  section(data-ng-controller='AppCtrl')
    h2 {{name}}
    nav.navbar.navbar-default(role='navigation', data-ng-init="$rootScope.tab = 'beers'")
      div.container-fluid
        div.navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='beers', data-ng-click="$rootScope.tab = 'beers'") Brand
        div.collapse.navbar-collapse(id="bs-example-navbar-collapse-1")
          ul.nav.navbar-nav
            li(data-ng-class="{'active' : $rootScope.tab == 'beers'}")
              a(href='beers', data-ng-click="$rootScope.tab = 'beers'") List Beers
            li(data-ng-class="{'active' : $rootScope.tab == 'cadBeers'}")
              a(href='beers/add', data-ng-click="$rootScope.tab = 'cadBeers'") Add Beer
            li(data-ng-class="{'active' : $rootScope.tab == 'breweries'}")
              a(href='breweries', data-ng-click="$rootScope.tab = 'breweries'") List Breweries
            li(data-ng-class="{'active' : $rootScope.tab == 'cadBreweries'}")
              a(href='breweries/add', data-ng-click="$rootScope.tab = 'cadBreweries'") Add Breweries

    section(data-ng-view)

    br
    div
      | MEAN seed app: v
      span(app-version)

  script(src='js/lib/angular/angular.js?version=1')
  script(src='js/services.js')
  script(src='js/app.js')
  script(src='js/controllers.js')
  script(src='js/controllers/beers.js')
  script(src='js/controllers/breweries.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
